generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Otp {
  id        String   @id @default(uuid())
  email     String
  codeHash  String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
}

model Booking {
  id String @id @default(uuid())

  serviceSlotId String
  serviceSlot   ServiceSlot @relation(fields: [serviceSlotId], references: [id])

  serviceType ServiceType

  name  String
  email String
  phone String

  vehicleMake  String
  vehicleModel String
  registration String
  vehicleSize  VehicleSize

  address  String
  postcode String
  notes    String?

  status BookingStatus @default(PENDING_PAYMENT)
  price  Int

  payment Payment?

  createdAt DateTime @default(now())
}

model ServiceZone {
  id             String   @id @default(uuid())

  postcodePrefix String   // SO16, SO18
  serviceDay     Int      // 1 = Monday ... 7 = Sunday
  zoneCode       String   // A, B, C

  isActive       Boolean  @default(true)

  createdAt      DateTime @default(now())

  @@index([postcodePrefix])
  @@unique([postcodePrefix, serviceDay])
}

model Operator {
  id        String   @id @default(uuid())
  name      String   @unique
  isActive  Boolean  @default(true)

  slots     ServiceSlot[]

  createdAt DateTime @default(now())
}

model ServiceSlot {
  id           String   @id @default(uuid())

  operatorId   String
  operator     Operator @relation(fields: [operatorId], references: [id])

  date         DateTime
  timeFrom     String   // "09:00"
  timeTo       String   // "17:00"

  maxBookings  Int
  zonePrefix   String?  // SO16 (optional)

  status       SlotStatus @default(ACTIVE)

  bookings     Booking[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([date])
}


model ServicePrice {
  id          String @id @default(uuid())

  vehicleSize VehicleSize
  serviceType ServiceType

  price       Int    // store in smallest unit (e.g. paise / pence)

  isActive    Boolean @default(true)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([vehicleSize, serviceType])
}

enum SlotStatus {
  ACTIVE
  INACTIVE
}


model Payment {
  id String @id @default(uuid())

  bookingId String  @unique
  booking   Booking @relation(fields: [bookingId], references: [id])

  amount    Int
  currency  String @default("GBP")

  provider  String // STRIPE
  intentId  String @unique

  status    PaymentStatus @default(PENDING)

  createdAt DateTime @default(now())
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
  PENDING_PAYMENT
}

enum VehicleSize {
  SMALL
  MEDIUM
  LARGE
  VAN
}

enum ServiceType {
  EXTERIOR
  INTERIOR
  VALET
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
}


